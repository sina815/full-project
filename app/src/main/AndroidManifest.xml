<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="book.course.molareza.ir.mp3player">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".G"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ActivityMain" />
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".search.ActivitySearch">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ActivityMain" />
        </activity>
        <activity android:name=".activity.ActivitySetting" />
        <activity android:name=".activity.ActivityDetailNews">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ActivityMain" />
        </activity>
        <activity android:name=".activity.ActivityCall" />
        <activity android:name=".favorite.ActivityFavorite">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ActivityMain" />
        </activity>
        <activity android:name=".activity.ActivityPlayer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ActivityMain"/>
        </activity>
    </application>

</manifest>