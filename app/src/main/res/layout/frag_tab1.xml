<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragTab1">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvContentFrag1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_rcv_background" />

    <ProgressBar
        android:id="@+id/prgFrag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txtNotFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/tab_text_title"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/prgFrag1"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutRefreshAgain"
        android:visibility="visible">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/refresh"
        android:tint="@color/tab_text_title"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtRefreshAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/refreshAgain"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/tab_text_title"
        android:layout_gravity="center"/>

    </LinearLayout>


</RelativeLayout>
