<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityPlayerOnline">


    <ImageView
        android:id="@+id/imgBlurOffline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/splash" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPlayOffline"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background_shape">

        <TextView
            android:id="@+id/txtSingerPlayerOffline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/tab_text_title"
            android:textSize="16sp" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imgMainOffline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarPlayOffline"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/splash" />

    <LinearLayout
        android:id="@+id/layout_PlayerOffline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtCurrentTimeOffline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:25"
                android:textColor="@color/textColor_sefid"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seekBarPlayerOffline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/txtTotalTimeOffline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:25"
                android:textColor="@color/textColor_sefid"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imfRepeatOffline"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".3"
                android:src="@mipmap/repeat_off" />

            <ImageView
                android:id="@+id/imgPrevOffline"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight=".3"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/prev" />

            <ImageView
                android:id="@+id/imgPlayOffline"
                android:layout_width="40dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".3"
                android:src="@mipmap/play"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:id="@+id/imgNextOffline"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".3"
                android:src="@mipmap/next"
                android:layout_marginRight="35dp"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
