<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_main_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_main_background2">


        <ImageView
            android:id="@+id/imgCloseDialog"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
android:padding="5dp"
            android:src="@mipmap/error"
            android:tint="@color/nav_drawer_text4" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtTitleDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="10dp"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:paddingBottom="10dp"
        android:text="@string/app_name"
        android:textColor="@color/dialog_text_color_1_width"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_main_background2" />

    <TextView
        android:id="@+id/txtMessageDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="right"
        android:paddingTop="15dp"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:paddingBottom="10dp"
        android:text="@string/abroad_music"
        android:textColor="@color/dialog_text_color_2_zard"
        android:textSize="15sp" />


</LinearLayout>