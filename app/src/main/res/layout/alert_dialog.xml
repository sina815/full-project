<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtTitleDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="15dp"
        android:text="@string/app_name"
        android:textColor="@color/toolbar_text_title"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab_text_title" />

    <TextView
        android:id="@+id/txtMessageDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:padding="15dp"
        android:text="@string/abroad_music"
        android:textColor="@color/cardView_text_color_nAlbum"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCloseDialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@color/tab_text_title"
        android:text="بستن"
        android:textColor="@color/cardView_background"
        android:textSize="22sp" />


</LinearLayout>