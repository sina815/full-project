<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/toolbar_background"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_menu_start"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_more_vert_black_48dp"
            android:layout_gravity="center"
            android:tint="@color/toolbar_text_title"/>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_magnify"
            android:layout_gravity="center"
            android:tint="@color/toolbar_text_title"
            android:paddingStart="10dp"
            android:id="@+id/imgSearch" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_favorite_black_48dp"
            android:layout_gravity="center"
            android:tint="@color/toolbar_text_title"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/imgFavorite" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/toolbar_text_title"
            android:gravity="end|center"
            android:paddingEnd="10dp" />

        <ImageView
            android:id="@+id/toolbar_menu"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_menu_black_48dp"
            android:scaleType="fitXY"
            android:layout_gravity="start"
            android:layout_marginEnd="15dp"
            android:tint="@color/toolbar_text_title"/>

    </LinearLayout>
</android.support.v7.widget.Toolbar>