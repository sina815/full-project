<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/toolbar_background"
    android:padding="5dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_menu_start"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_more_vert_black_48dp"
            android:tint="@color/toolbar_text_title" />


        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:src="@mipmap/ic_magnify"
            android:tint="@color/toolbar_text_title" />

        <ImageView
            android:id="@+id/imgFavorite"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:src="@mipmap/ic_favorite_black_48dp"
            android:tint="@color/toolbar_text_title" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgInfo"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:src="@mipmap/info"
                android:tint="@color/toolbar_text_title" />

            <TextView
                android:id="@+id/txtCountInfo"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignEnd="@id/imgInfo"
                android:layout_alignRight="@id/imgInfo"
                android:layout_margin="2dp"
                android:background="@drawable/info_background"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/cardview_light_background"
                android:textSize="10sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="10dp"
            android:text="@string/app_name"
            android:textColor="@color/toolbar_text_title"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/toolbar_menu"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_menu_black_48dp"
            android:tint="@color/toolbar_text_title" />

    </LinearLayout>
</android.support.v7.widget.Toolbar>